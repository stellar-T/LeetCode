#include <vector>
#include <stack>
#include <iostream>
#include <queue>
using namespace std;
struct TreeNode
{
    int val;
    TreeNode *left;
    TreeNode *right;
    TreeNode(int x) : val(x), left(NULL), right(NULL) {}
};
vector<vector<int> > levelOrder(TreeNode *root)
{
    vector<vector<int> > ans;
    if (!root)
        return ans;
    queue<TreeNode *> qu;
    qu.push(root);
    int size = qu.size();
    while (!qu.empty())
    {
        vector<int> a;
        for (int i = 0; i < size; i++)
        {
            root = qu.front();
            qu.pop();
            a.push_back(root->val);
            if (root->left)
                qu.push(root->left);
            if (root->right)
                qu.push(root->right);
        }
        ans.push_back(a);
        size = qu.size();
    }
    return ans;
}